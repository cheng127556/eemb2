.btn2 {
  color: red;
}

/*使屏幕变暗 */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  height: 700rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

/*加减按钮样式*/

.stepper {
  width: 250rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  margin-left: 60rpx;
  margin-top: 50rpx;
  border: 1px solid #a5a4a4;
  float: left;
  margin-left: 40rpx;
}

.stepper button::after {
  border-radius: 0;
}

/*加入购物车弹窗的按钮样式*/

.normal {
  color: #000;
  line-height: 55rpx;
  text-align: center;
  font-size: 50rpx;
  background: #fff;
  border-left: 1px solid #a4a4a4;
  border-right: 0;
}

.normal2 {
  color: #000;
  line-height: 55rpx;
  text-align: center;
  font-size: 50rpx;
  background: #fff;
  border-right: 1px solid #a4a4a4;
  border-left: 0;
}

/*关闭弹窗按钮样式*/

.close-circle {
  width: 44rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  z-index: 10;
}

/*字体数量*/

.text_num {
  font-size: 34rpx;
  height: 40rpx;
  margin-top: 57rpx;
  margin-left: 40rpx;
  float: left;
}

/*确定按钮*/

.define {
  background-color: #f44336;
  /* 红色 */
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  bottom: 0;
}

.num {
  display: flex;
  flex-flow: row;
}

/*弹出框里的图片*/

.num_img {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border: 1px solid #000;
}

.amount {
  position: fixed;
  bottom: 180rpx;
  width: 100%;
  height: 35rpx;
}

.num_detail {
  width: 100%;
  position: absolute;
  top: 10rpx;
  height: 200rpx;
}

.num_price {
  position: absolute;
  left: 200rpx;
  top: 40rpx;
  font-size: 34rpx;
}

.num_name {
  position: absolute;
  left: 200rpx;
  top: 70rpx;
  font-size: 30rpx;
}

.hr3 {
  height: 5rpx;
  width: 100%;
  background-color: #f2f2f2;
  position: absolute;
  top: 525rpx;
}

.num_text {
  position: absolute;
  top: 200rpx;
  font-size: 30rpx;
}

.num_text text {
  width: 100%;
  padding: 10rpx;
  background-color: #f2f2f2;
  border-radius: 5%;
  margin-left: 20rpx;
}

.num_text button {
  border: 0;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 28rpx;
  border-radius: 0rpx;
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
}
