.content-box-empty {
  width: 100%;
  position: relative;
  overflow: hidden;
  height: 100%;
}

.content-box-empty .icon-box {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 30%;
  right: 50%;
  margin-right:-150rpx; 
  background-color:#e4e4e4; 
  border-radius:50%; 
}

.content-box-empty .empty-icon {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top:50%;
  margin-top:-100rpx;
  right: 50%; 
  margin-right:-100rpx; 
}
.order-box{
  background-color:white;
  margin-top:15rpx;  
}
.order-box .order-title{
  text-indent: 20rpx;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #efefef;
}
.order-box .order-title .order-state{
  float:right; 
  margin-right:30rpx; 
}
.order-box .order-item{
  height: 160rpx;
  position: relative;
  padding-bottom:10rpx; 
}
.order-box .order-list-box{
  border-bottom: 1rpx solid #efefef;
}
.order-box .order-item .order-product-img{
  width: 200rpx;
  height: 160rpx;
}
.order-box .order-item .order-product-name{
  position: absolute;
  top: 20rpx;
  left: 212rpx;
}
.order-box .order-item .order-product-text{
  position: absolute;
  top: 70rpx;
  left: 212rpx;
  width: 370rpx;
}
.order-box .order-item .order-product-price{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}
.order-box .order-item .order-product-count{
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  font-size: 24rpx;
}
.order-box .order-info-box{
  height: 40rpx;
  padding: 10rpx;
  line-height: 40rpx;
  border-bottom: 1rpx solid #efefef;
}

.order-box .order-info-box .total-price{
  color: red;
}
.order-box .order-info{
  float: right;
  margin-right:24rpx; 
}
.order-handle{
  height: 80rpx;
  position: relative;
}
.order-handle .cancellation{
  position: absolute;
  top: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 150rpx;
  border: 1rpx solid #666666;
  right: 220rpx;
  border-radius:50rpx; 
  text-align: center;
}
.order-handle .pay{
  position: absolute;
  top: 15rpx;
  height: 50rpx;
   line-height: 50rpx;
  width: 150rpx;
  border: 1rpx solid red;
  color: red;
  right: 26rpx;
  border-radius:50rpx; 
  text-align: center;
}



.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
    width: 20%;
    height: 100rpx;
    display: inline-block;
    text-align: center;
}
.nav-item.select{
  color: red;
}