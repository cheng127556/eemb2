/*flex布局*/

.grids {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 49rpx;
}

.grid .item text {
  display: block;
}

.img-box {
  width: 197rpx;
  height: 92rpx;
  box-shadow: #666 2rpx 2rpx 2rpx;
  position: relative;
}

.img-box .hot-sell-log {
  position: absolute;
  z-index: 100;
  right: 0;
  top: 0;
  width: 90rpx;
  height: 60rpx;
}

.img-box .hot-sell-img {
  margin-top: 10rpx;
  margin-left: 50rpx;
  width: 100rpx;
  height: 80rpx;
  position: absolute;
}

.nametxt {
  width: 197rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/*hot榜商品*/

.hot_img {
  width: 100%;
  height: 400rpx;
  /* border-bottom: 10rpx solid #f2f2f2; */
}

.hot_img image {
